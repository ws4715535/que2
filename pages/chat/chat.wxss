/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-messages {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 20rpx;
}

.message-sent {
  justify-content: flex-end;
}

.message-received {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 70%;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  position: relative;
}

.message-sent .message-bubble {
  background: #2E7D32;
  color: white;
  border-bottom-right-radius: 4rpx;
}

.message-received .message-bubble {
  background: white;
  color: #333;
  border-bottom-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-content {
  font-size: 28rpx;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
}

.message-time {
  font-size: 20rpx;
  opacity: 0.7;
  display: block;
  text-align: right;
}

.input-area {
  background: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.message-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  margin-right: 20rpx;
}

.send-btn {
  background: #2E7D32;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  transition: all 0.2s;
}

.send-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.send-btn:disabled {
  background: #ccc;
  color: #999;
}