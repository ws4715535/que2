/* pages/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.product-images {
  width: 100%;
  height: 600rpx;
  background: white;
}

.product-images image {
  width: 100%;
  height: 100%;
}

.product-info {
  margin: 20rpx;
  padding: 30rpx;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 48rpx;
  color: #ff4444;
  font-weight: bold;
  margin-right: 20rpx;
}

.condition {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.product-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.product-meta {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.meta-label {
  color: #999;
  font-size: 28rpx;
  width: 100rpx;
}

.meta-value {
  color: #333;
  font-size: 28rpx;
}

.seller-info {
  margin: 20rpx;
  padding: 30rpx;
}

.seller-header {
  display: flex;
  align-items: center;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.seller-details {
  flex: 1;
}

.seller-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.seller-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.rating-score {
  color: #ffa500;
  margin-right: 20rpx;
}

.transaction-count {
  color: #999;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn {
  border-radius: 8rpx;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  transition: all 0.2s;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background: #FFF8E1;
  color: #2E7D32;
  border: 2rpx solid #2E7D32;
  flex: 1;
}

.btn-primary {
  background: #2E7D32;
  color: white;
  flex: 2;
}

.buy-btn {
  background: #ff4444;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}