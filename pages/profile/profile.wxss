/* pages/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.user-info {
  margin: 20rpx;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #2E7D32 0%, #4CAF50 100%);
  color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 125, 50, 0.3);
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.user-rating {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  opacity: 0.9;
}

.rating-score {
  margin-right: 20rpx;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.function-list {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background-color: #f5f5f5;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 28rpx;
}

.auth-section {
  margin: 40rpx 20rpx;
}

.btn {
  width: 100%;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 50rpx;
  text-align: center;
  border: none;
  outline: none;
  transition: all 0.2s;
}

.btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary {
  background: #2E7D32;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(46, 125, 50, 0.3);
}

.btn-secondary {
  background: white;
  color: #666;
  border: 2rpx solid #ddd;
}