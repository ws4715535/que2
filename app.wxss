/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 主色调 */
.primary-color {
  color: #2E7D32;
}

.primary-bg {
  background-color: #2E7D32;
}

/* 辅助色 */
.secondary-color {
  color: #FFF8E1;
}

.secondary-bg {
  background-color: #FFF8E1;
}

/* 通用按钮样式 */
.btn {
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  outline: none;
}

.btn-primary {
  background-color: #2E7D32;
  color: white;
}

.btn-secondary {
  background-color: #FFF8E1;
  color: #2E7D32;
  border: 2rpx solid #2E7D32;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 商品卡片 */
.product-card {
  display: flex;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price {
  font-size: 36rpx;
  color: #ff4444;
  font-weight: bold;
}

.product-location {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 搜索栏 */
.search-bar {
  background: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  border: none;
  outline: none;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/* 分类导航 */
.category-nav {
  display: flex;
  overflow-x: auto;
  padding: 20rpx;
  background: white;
  margin: 20rpx 0;
}

.category-item {
  flex-shrink: 0;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  background: #2E7D32;
  color: white;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 消息红点 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 50%;
  min-width: 32rpx;
  text-align: center;
}